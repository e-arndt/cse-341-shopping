{
  "swagger": "2.0",
  "info": {
    "title": "Shopping API",
    "description": "Docs for /auth, /users and /products",
    "version": "1.0.0"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],

  "tags": [
    {
      "name": "Auth",
      "description": "OAuth login and callback endpoints"
    },
    {
      "name": "System",
      "description": "API status and root endpoints"
    },
    {
      "name": "Users",
      "description": "User / customer account endpoints (protected)"
    },
    {
      "name": "Products",
      "description": "Product catalog endpoints"
    }
  ],

  "securityDefinitions": {
    "BearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Paste: Bearer <JWT token> from /auth/google/callback"
    }
  },

  "paths": {
    "/auth/google": {
      "get": {
        "tags": ["Auth"],
        "summary": "Start Google OAuth login",
        "description": "Redirects the user to Google to sign in. Use this in a normal browser tab, not via 'Try it out' in Swagger.",
        "responses": {
          "302": {
            "description": "Redirect to Google sign-in"
          }
        }
      }
    },

    "/auth/google/callback": {
      "get": {
        "tags": ["Auth"],
        "summary": "Google OAuth callback",
        "description": "Google redirects here after login. Returns a JWT and basic user info.",
        "responses": {
          "200": {
            "description": "Login successful, JWT returned",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string", "example": "Login successful" },
                "token": { "type": "string", "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..." },
                "user": { "$ref": "#/definitions/User" }
              }
            }
          },
          "401": {
            "description": "Unauthorized or invalid Google callback"
          }
        }
      }
    },

    "/auth/failure": {
      "get": {
        "tags": ["Auth"],
        "summary": "OAuth failure",
        "description": "Shown if Google login fails or is cancelled.",
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "204": {
            "description": "No Content"
          }
        }
      }
    },

    "/": {
      "get": {
        "tags": ["System"],
        "summary": "API root",
        "description": "Simple health check route that returns 'Server is up'.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "204": {
            "description": "No Content"
          }
        }
      }
    },

    "/users/": {
      "get": {
        "tags": ["Users"],
        "summary": "Get all users",
        "description": "Returns a list of all users. Protected – requires Bearer JWT.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": { "$ref": "#/definitions/UsersArray" }
          },
          "204": {
            "description": "No Content"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      },
      "post": {
        "tags": ["Users"],
        "summary": "Create a new user",
        "description": "Create a user document. Protected – requires Bearer JWT.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string",
            "required": false
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/CreateUserRequest"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": { "$ref": "#/definitions/User" }
          },
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "409": {
            "description": "Conflict"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },

    "/users/{id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Get user by ID",
        "description": "Protected – requires Bearer JWT.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string",
            "required": false
          }
        ],
        "responses": {
          "200": {
